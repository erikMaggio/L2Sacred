<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema para la pantalla de Splash -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Aquí asegúrate de que img sea el fondo deseado -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Configuración para Android 12+ -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item> <!-- Color de fondo del splash -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@null</item> <!-- Desactiva el ícono animado -->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@null</item> <!-- Sin color de fondo para el ícono animado -->
    </style>
</resources>
